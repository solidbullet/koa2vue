   </body>
   
   <script>
         var app = angular.module('myApp', []);
         app.controller('siteCtrl', function($scope, $http,$interval) {


         $interval(function(){
            let url = "http://127.0.0.1:3000/macd/getjson";
            $http.get(url)
            .success(function (response) {
                  $scope.data = response[1];
                  console.log(response);
            });//end for http.get
         },1500)// end for interval
         
         });
	</script>
</html>